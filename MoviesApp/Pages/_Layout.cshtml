<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MoviesApp</title>

	<environment include="Development">
		<link rel="stylesheet" href="~/css/movies.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/css/movies.min.css" asp-append-version="true" />
	</environment>
</head>
<body>
	<nav class="navbar navbar-dark bg-primary navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a asp-page="/Index" class="navbar-brand">Movies</a>
			</div>
			<ul class="nav navbar-nav">
				<li><a asp-page="/Index">Home</a></li>
			</ul>
		</div>
	</nav>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Movies Vue App</p>
		</footer>
	</div>

	<environment include="Development">
		<script src="~/js/dist/jquery/jquery.js"></script>
		<script src="~/js/dist/bootstrap/bootstrap.bundle.js"></script>
		<script src="~/js/dist/build.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/js/dist/jquery/jquery.min.js"></script>
		<script src="~/js/dist/bootstrap/bootstrap.bundle.min.js"></script>
		<script src="~/js/dist/build.js"></script>
	</environment>

	@RenderSection("Scripts", required: false)
</body>
</html>
