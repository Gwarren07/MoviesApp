<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - MoviesApp</title>

  <environment include="Development">
    <link rel="stylesheet" href="~/css/movies.css" />
  </environment>
  <environment exclude="Development">
    <link rel="stylesheet" href="~/css/movies.min.css" asp-append-version="true" />
  </environment>
</head>
<body>
  <nav class="navbar navbar-dark bg-primary navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a asp-page="/Index" class="navbar-brand">Movies</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a asp-page="/Index">Home</a></li>
      </ul>
    </div>
  </nav>
  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - Movies Vue App</p>
    </footer>
  </div>

  <environment include="Development">
    <script src="~/js/dist/jquery/jquery.js"></script>
    <script src="~/js/dist/bootstrap/bootstrap.js"></script>
    <script src="~/js/dist/build.js"></script>
  </environment>
  <environment exclude="Development">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            asp-fallback-src="~/js/dist/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"
            asp-fallback-src="~/js/dist/bootstrap/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            crossorigin="anonymous"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
    </script>
  </environment>

  @RenderSection("Scripts", required: false)
</body>
</html>
